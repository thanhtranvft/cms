@using VFT.CMS.Application.Categories.Dto;
@model CategoryEditDto
@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
}

@await Html.PartialAsync("/Areas/Admin/Views/Shared/Form/_FormHeader.cshtml", new FormHeaderViewModel(ViewData["Title"].ToString(), false, true))

<section class="content">
    <div class="container-fluid">
        <div asp-validation-summary="All" class="text-danger"></div>

        <form method="post" asp-area="Admin" asp-action="Edit" asp-antiforgery="true" class="form-horizontal">
            <div class="row mt-2">
                <div class="">
                    <input asp-for="Id" class="form-control" hidden />
                </div>
                <div class="col-md-6">
                    <label asp-for="Title" class="col-md-6 control-label"></label>
                    <div class="col-md">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <label asp-for="ParentCategory" class="col-md control-label"></label>
                    <div class="col-md">
                        <select asp-for="ParentCategory" asp-items="@ViewBag.Categories" class="form-control" required>
                            <option selected value="">--Chọn danh mục cha--</option>
                        </select>
                        <span asp-validation-for="ParentCategory" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-6">
                    <label asp-for="Status" class="col-md control-label"></label>
                    <div class="col-md">
                        <select asp-for="Status" asp-items="Html.GetEnumSelectList<StatusActivity>()" name="Status" class="form-control" required>
                            <option selected value="">--Chọn trạng thái--</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
            </div>

            @await Html.PartialAsync("/Areas/Admin/Views/Shared/Form/_FormWithSave.cshtml")

        </form>
    </div>
</section>
