@model string
@{
    ViewData["Title"] = "Tạo mới phân quyền";
}

@await Html.PartialAsync("/Areas/Admin/Views/Shared/Form/_FormHeader.cshtml", new FormHeaderViewModel(ViewData["Title"].ToString(), false, true))

<section class="content">
    <div class="container-fluid">
        <div class="text-danger" asp-validation-summary="All"></div>

        <form method="post" asp-controller="Role" asp-action="Create" asp-antiforgery="true" class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2" for="name">Tên nhóm quyền</label>
                <div class="col-sm-4">
                    <input class="form-control" name="name" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @await Html.PartialAsync("/Areas/Admin/Views/Shared/Form/_FormWithSave.cshtml")
                </div>
            </div>
        </form>
    </div>
</section>
