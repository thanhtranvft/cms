@model FormHeaderViewModel
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                @if (Model.HasBack)
                {
                    <a asp-action="Index" class="btn bg-blue">
                        <i class="fa fa-arrow-left"></i>
                        @VFTResource.Button_Back
                    </a>
                }
            </div>
            @*<div class="col-sm-3">
                <h1>@Html.Raw(Model.Title)</h1>
            </div>*@
            <div class="col-sm-6">
                @if (Model.HasCreateNew)
                {
                    <a asp-action="Create" class="btn bg-blue float-sm-right">
                        <i class="fa fa-plus-square"></i>
                        Thêm mới
                    </a>
                }
            </div>
        </div>
    </div>
</section>