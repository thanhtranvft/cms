@model UserViewModel
@{
    ViewData["Title"] = "Sửa người dùng";
}

@await Html.PartialAsync("/Areas/Admin/Views/Shared/Form/_FormHeader.cshtml", new FormHeaderViewModel(ViewData["Title"].ToString(), false, true))

<section class="content">
    <div class="container-fluid">
        <div asp-validation-summary="All" class="text-danger"></div>

        <form method="post" asp-area="Admin" asp-controller="User" asp-action="Edit" asp-antiforgery="true" class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2" asp-for="Id">Id</label>
                <div class="col-sm-4">
                    <input class="form-control" asp-for="Id" disabled />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" asp-for="UserName">Tài khoản người dùng</label>
                <div class="col-sm-4">
                    <input class="form-control" asp-for="UserName" disabled />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" asp-for="Email">Email</label>
                <div class="col-sm-4">
                    <input class="form-control" asp-for="Email" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @await Html.PartialAsync("/Areas/Admin/Views/Shared/Form/_FormWithSave.cshtml")
                </div>
            </div>

        </form>
    </div>
</section>
